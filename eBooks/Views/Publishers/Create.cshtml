@model eBooks.Models.Publisher

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Publisher</h4>
<hr />
<div id="msg">

</div>
<div class="row">
    
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="Publishers" id="form0" data-ajax="true" data-ajax-method="Post" data-ajax-mode="replace" data-ajax-update="#msg" data-ajax-success="success">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PublisherName" class="control-label"></label>
                <input asp-for="PublisherName" class="form-control" />
                <span asp-validation-for="PublisherName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PublisherAddress" class="control-label"></label>
                <input asp-for="PublisherAddress" class="form-control" />
                <span asp-validation-for="PublisherAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <environment include="Development,Production">

        <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
        <script src="~/lib/ajax/dist/jquery.unobtrusive-ajax.js"></script>
        @*Axaj data successfully Post then data clear*@
        <script>
            function success() {
                $("#form0").trigger("reset");
            };
        </script>
    </environment>
}
